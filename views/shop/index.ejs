<%- include('../includes/head') %>
        <link rel="stylesheet" href="/css/shop.css">
    </head>
    <body>
        <%- include('../includes/header') %>

        <main>
            <div class="container"> 
                <div class="row"><h3 class="pt-5 pb-2">My Products</h3></div>
                
                <% if(products.length > 0) { %>
                    <div class="row row-cols-1 row-cols-md-3 g-4">
                        <% for(let item of products) { %>
                            <%  const { _id: id, title, description, price, imageURL } = item %>
                            <div class="col">
                                <div class="card" style="width: 18rem; height: auto;">
                                    <img class="card-img-top" style="height: 15rem; object-fit:cover" src="<%= imageURL %>" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title"><%= title %></h5>
                                        <p class="card-text"><%= description %></p>
                                        <p class="text-muted lead">$<%= price %></p>
                                        <a class="btn btn-primary" href="/product-details/<%= id%>">Details</a>
                                        <form action="/add-to-cart/<%= id%>" method="POST" style="display: inline-block;">
                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                                            <button type="submit" class="btn btn-primary">Add to Cart</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                    <%- include('../includes/pagination.ejs', { pagination: pagination }) %>
                <% } else { %>
                    <h5 class="row">No Products Found</h5>
                <% }%>
            </div>
        </main>
<%- include('../includes/end') %>