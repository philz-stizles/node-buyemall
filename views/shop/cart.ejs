<%- include('../includes/head.ejs') %>
        <link rel="stylesheet" href="/css/cart.css">
    </head>
    <body>
        <%- include('../includes/header.ejs') %>
        <main>
            <div class="container">
                <h2 class="my-5"><%= pageTitle %></h2>

                <div class="row">
                    <div class="col-md-8">
                        <% if(products.length > 0) { %>
                            <% for(let item of products) { %>
                                <div class="card w-100 p-4">
                                    <div class="card-body">
                                        <h5 class="card-title fw-bold"><%= item.title %></h5>
                                        <p class="card-text">Quantity: <%= item['CartProduct.quantity'] %></p>
                                        <form style="display: inline-block;" action="/remove-from-cart" method="POST">
                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                                            <input type="hidden" name="id" value="<%= item.id %>" />
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            <% } %>
                        <% } else { %>
        
        
                        <% } %>
        
                        <hr />
                        <form style="display: inline-block;" action="/orders" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                            <button type="submit" class="btn btn-outline-primary">Order Now!</button>
                        </form>
                    </div>
                </div>
            </div>
        </main>
<%- include('../includes/end') %>

