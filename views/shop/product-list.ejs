<%- include('../includes/head') %>
        <link rel="stylesheet" href="/css/shop.css">
    </head>
    <body>
        <%- include('../includes/header') %>

        <main>
            <div class="container"> 
                <div class="row"><h3 class="py-3 px-0">My Products</h3></div>
                
                <% if(products.length > 0) { %>
                    <div class="row row-cols-1 row-cols-md-3 g-4">
                        <% for(let item of products) { %>
                            <%  const { _id: id, title, description, price, imageURL } = item %>
                            <div class="col">
                                <div class="card" style="width: 18rem; height: auto;">
                                    <img class="card-img-top" style="height: 15rem; object-fit:cover" src="<%= imageURL %>" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title"><%= title %></h5>
                                        <p class="card-text"><%= description %></p>
                                        <p class="text-muted lead">$<%= price %></p>
                                        <a class="btn btn-primary" href="/product-details/<%= id%>">Details</a>
                                        <a class="btn btn-primary" href="#">Add to Cart</a>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                <% } else { %>
                    <h5 class="row">No Products Found</h5>
                <% }%>
            </div>
        </main>
<%- include('../includes/end') %>